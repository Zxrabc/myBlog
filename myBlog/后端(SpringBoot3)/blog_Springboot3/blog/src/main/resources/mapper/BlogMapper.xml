<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zxr.blog.mapper.BlogMapper">
  <resultMap id="BaseResultMap" type="com.zxr.blog.entities.Blog">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="createTime" jdbcType="TIMESTAMP" property="createtime" />
    <result column="editTime" jdbcType="TIMESTAMP" property="edittime" />
    <result column="hot" jdbcType="INTEGER" property="hot"/>
    <result column="category" jdbcType="VARCHAR" property="category"/>
    <result column="tags" jdbcType="VARCHAR" property="tags"/>
  </resultMap>

  <select id="selectCountByCategoryKeyword" parameterType="String" resultType="integer">
    select count(*) from tb_blog
    <where>
        <if test="category != null">
            category = #{category}
        </if>
        <if test="keyword != null">
          and title like concat ('%',#{keyword},'%')
        </if>
    </where>
  </select>

    <select id="selectLimitByCategoryKeyword" resultType="com.zxr.blog.entities.Blog">
        select * from tb_blog
        <where>
            <if test="category != null">
                category = #{category}
            </if>
            <if test="keyword != null">
                and title like concat ('%',#{keyword},'%')
            </if>
        </where>
        limit #{pagesize} offset #{page}
    </select>

    <select id="selectTop10" resultType="com.zxr.blog.entities.Blog">
        select * from tb_blog order by hot desc limit 10
    </select>

    <update id="hotAdd" parameterType="String">
        update tb_blog set hot = hot + 1 where id = #{id}
    </update>

</mapper>